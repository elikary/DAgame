<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_ui"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher"></ImageView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:layout_weight="0.5"
            android:shadowColor="@color/DKGRAY"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="@+id/label"
            android:textSize="@dimen/abc_action_bar_title_text_size"></TextView>

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:layout_weight="0.5"
            android:text="@+id/label"
            android:textColor="@color/DKGRAY"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/beer"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:src="@drawable/beer"></ImageView>

            <TextView
                android:id="@+id/beer_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/beer"
                android:text="@+id/label"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

            <ImageView
                android:id="@+id/food"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/beer_amount"
                android:layout_marginRight="2dp"
                android:src="@drawable/food"></ImageView>

            <TextView
                android:id="@+id/food_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/food"
                android:text="@+id/label"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

            <ImageView
                android:id="@+id/dairy"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/food_amount"
                android:layout_marginRight="2dp"
                android:src="@drawable/dairy"></ImageView>

            <TextView
                android:id="@+id/dairy_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/dairy"
                android:text="@+id/label"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

            <ImageView
                android:id="@+id/metal"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dairy_amount"
                android:layout_marginRight="2dp"
                android:src="@drawable/metal"></ImageView>

            <TextView
                android:id="@+id/metal_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/metal"
                android:text="@+id/label"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

            <ImageView
                android:id="@+id/wood"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/metal_amount"
                android:layout_marginRight="2dp"
                android:src="@drawable/wood"></ImageView>

            <TextView
                android:id="@+id/wood_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/wood"
                android:text="@+id/label"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>

            <ImageView
                android:id="@+id/gold"
                android:layout_width="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/wood_amount"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_launcher"></ImageView>

            <TextView
                android:id="@+id/gold_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/gold"
                android:text="@+id/label"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size"></TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout> 